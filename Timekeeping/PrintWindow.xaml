<Window x:Class="Timekeeping.PrintWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Casomira"
        mc:Ignorable="d"
        Title="Window1" Height="197.096" Width="300" WindowStyle="ToolWindow">
    <Grid Background="Black">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="60*"/>
            <ColumnDefinition Width="13*"/>
        </Grid.ColumnDefinitions>
        <Viewbox Stretch="Uniform" Grid.ColumnSpan="2">
            <StackPanel Height="293" Width="auto" Name="stackPanel1" VerticalAlignment="Top">
                <Label x:Name="endTimeLabel" Content="00:00:00" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Top" Height="Auto" Width="Auto" Foreground="White" FontSize="96"/>
                <Label x:Name="firstTimeLabel" Content="00:00:00" HorizontalAlignment="Right" Margin="191,0" VerticalAlignment="Top" Height="Auto" Width="Auto" Foreground="White" FontSize="32"/>
            </StackPanel>
        </Viewbox>
    </Grid>
</Window>
